<%= hidden_field_tag 'plain_card[card_token]', @plain_card.card_token %>
<div>
  <% if @plain_card.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plain_card.errors.count, 'error') %> prohibited this card from being saved:</h2>

      <ul>
        <% @plain_card.errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="col-md-6">
  <div class="form-group">
    <%= label_tag('plain_card[card_number]', 'Card number') %>
    <%= text_field_tag('plain_card[card_number]', @plain_card.card_number, class: 'form-control input-medium',
                       maxlength: 16, placeholder: 'Card number') %>
  </div>

  <div class="form-group">
    <%= label_tag('plain_card[expiration_date]', 'Expiration date') %>
    <%= text_field_tag('plain_card[expiration_date]', just_date_year(@plain_card.expiration_date), class: 'form-control input-medium', maxlength: 5, placeholder: 'Expiration Date eg 01/16') %>
  </div>

  <div class="form-group">
    <%= label_tag('plain_card[card_type]', 'Card type') %>
    <%= select_tag 'plain_card[card_type]',
                   options_for_select([['VISA', 'VISA'], ['MasterCard', 'MASTERCARD'], ['Amex', 'AMEX']], @plain_card.card_type),
                   class: 'form-control',
                   multiple: false

    %>
  </div>

  <div>
    <%= submit_tag button_text, class: 'btn btn-primary' %>
  </div>
</div>


